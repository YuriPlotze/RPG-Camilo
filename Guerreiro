public class Guerreiro extends Personagem {
    private int vida;
    private int defesa;
    private int dano; // ataque do personagem
    private String Arma;

    public Guerreiro (){
        this.vida = 180;
        this.defesa = 20;
        this.dano = 30;
    }
    
    public int getVida() {
        return this.vida;
    }

    public void setVida(int vida) {
    }

    public int getDefesa() {
        return this.defesa;
    }

    public void setDefesa(int defesa) {
    }


    public int getDano() {
        return this.dano;
    }

    public void setDano(int dano) {
    }
    public String getArma() {
        return Arma;
    }

    public void setArma(String arma) {

        if(arma.toUpperCase().equals("ESPADA")) {
            this.Arma = "Espada";
            this.dano+=10;
            this.defesa+=15;
        }else{
            this.Arma = "Machado";
            this.dano+=17;
            this.defesa+=8;
        }
          
    }

}
